<h1>Atrapa el Cuadro ðŸ”´</h1>
<div id="score">Puntos: 0</div>
<div id="gameOver">Â¡Game Over!</div>
<button onclick="startGame()">Iniciar Juego</button>

<script>
let score = 0;
let gameRunning = false;
let spawnInterval;

function startGame() {
    score = 0;
    document.getElementById("score").textContent = "Puntos: 0";
    document.getElementById("gameOver").style.display = "none";
    gameRunning = true;

    spawnInterval = setInterval(spawnTarget, 800);

    setTimeout(() => {
        clearInterval(spawnInterval);
        gameRunning = false;
        document.getElementById("gameOver").style.display = "block";
    }, 20000); // dura 20 segundos
}

function spawnTarget() {
    if (!gameRunning) return;

    const target = document.createElement("div");
    target.classList.add("target");

    target.style.left = Math.random() * (window.innerWidth - 50) + "px";
    target.style.top = Math.random() * (window.innerHeight - 50) + "px";

    target.onclick = function() {
        score++;
        document.getElementById("score").textContent = "Puntos: " + score;
        target.remove();
    };

    document.body.appendChild(target);

    setTimeout(() => {
        target.remove();
    }, 700);
}
</script>

</body>
